<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg1"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg2"
        android:padding="10dp" >

        <ScrollView
            android:id="@+id/scrll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >
 					<TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="IM7 FORM"
                    android:gravity="center"
                     android:textColor="@color/bg_register"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Number Plate"
                     android:textColor="@color/white"
                    android:textSize="20dp" />
                
                <EditText
            android:id="@+id/npalte"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"           
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/input_login"
            android:textColorHint="@color/input_login_hint" />

                 <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Chasis Number"
                     android:textColor="@color/white"
                    android:textSize="20dp" />
                
                <EditText
            android:id="@+id/chasi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"           
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/input_login"
            android:textColorHint="@color/input_login_hint" />

 					<TextView 
     				android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Brand Number"
                     android:textColor="@color/white"
                    android:textSize="20dp" />
                
                <EditText
            android:id="@+id/brnumb"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"           
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/input_login"
            android:textColorHint="@color/input_login_hint" />
                 <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="C.I.F VALUE"
                     android:textColor="@color/white"
                    android:textSize="20dp" />
                
                <EditText
            android:id="@+id/cifnumb"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"           
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/input_login"
            android:textColorHint="@color/input_login_hint" />
             
                <Button
            android:id="@+id/attach"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:background="@null"
            android:text="Attach files"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" />
                <Button
                    android:id="@+id/save"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dip"
                     android:background="@color/input_register_bg"
                    android:text="@string/btn_save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>